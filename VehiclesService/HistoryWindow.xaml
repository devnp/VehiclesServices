<Window x:Class="VehiclesService.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehiclesService"
        mc:Ignorable="d"
        Title="History" Height="380" Width="525" MinHeight="380" MinWidth="525" Background="LightSalmon">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Label x:Name="HistorSelectionLabel" Content="Select scope of the history logs:" TextBlock.FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0"/>
        <DockPanel x:Name="HistoryTypePanel" HorizontalAlignment="Left" LastChildFill="True" Grid.Row="1">
            <RadioButton x:Name="AllRadioButton" IsChecked="True" TextBlock.FontSize="15">All history </RadioButton>
            <RadioButton x:Name="RegNoRadioButton" TextBlock.FontSize="15">Select by reg no. </RadioButton>
            <RadioButton x:Name="DateRadioButton" TextBlock.FontSize="15">Select by date</RadioButton>
        </DockPanel>
    </Grid>
</Window>