<Window x:Class="VehiclesService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehiclesService"
        mc:Ignorable="d"
        Title="Main" Height="380" Width="525" MinHeight="380" MinWidth="525" Background="LightSalmon">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="NewServiceLabel" Content="New service" TextBlock.FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" MouseLeftButtonUp="NewServiceLabelClick" Cursor="Hand"/>
        <Label x:Name="HistoryLabel" Content="History" TextBlock.FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" MouseLeftButtonUp="HistoryLabelClick" Cursor="Hand"/>


    </Grid>
</Window>
